@model BookLibraryApp.Models.ViewModels.LoanViewModel

@{
    ViewData["Title"] = "Checkout Book";
}

<h1>Checkout Book</h1>

<h4>New Loan Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PatronId" class="control-label"></label>
                <select asp-for="PatronId" class="form-control" asp-items="ViewBag.Patrons">
                    <option value="">— Select Patron —</option>
                </select>
                <span asp-validation-for="PatronId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books">
                    <option value="">— Select Book —</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="CheckoutDate" class="control-label"></label>
                <input asp-for="CheckoutDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" readonly />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Checkout" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to Loan History</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}