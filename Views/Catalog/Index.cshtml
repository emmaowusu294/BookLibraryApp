@model IEnumerable<BookLibraryApp.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Library Catalog";
}

<h1>Library Catalog</h1>

<form asp-controller="Catalog" asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Search by Title or Author..." />
        <button class="btn btn-primary" type="submit">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear Filter</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.AuthorName)</th>
            <th></th> @* For Details link *@
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center text-muted">No books found matching the current criteria.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.AuthorName)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-sm btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>