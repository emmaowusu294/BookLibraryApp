@model BookLibraryApp.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Book Details";
}

<h1>Details</h1>

<div>
    <h4>Book: @Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-9">
