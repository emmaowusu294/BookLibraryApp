@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibriVerse</title> @* Updated Title *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookLibraryApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @* Add your logo as a favicon (optional but good practice) *@
    <link rel="icon" href="~/images/libriverse-logo.png" type="image/png">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* LOGO/BRAND (Handles redirection based on login status) *@
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="UserRedirect" asp-action="Index">
                        @* Added flex classes *@
                        @* 🖼️ FIX: Replace text with image tag *@
                        <img src="~/images/libriverse-logo.png" alt="LibriVerse Logo" style="height: 70px;" />
                        LibriVerse @* Keep text next to logo *@
                    </a>
                }
                else
                {
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        @* Added flex classes *@
                        @* 🖼️ FIX: Replace text with image tag *@
                        <img src="~/images/libriverse-logo.png" alt="LibriVerse Logo" style="height: 70px;" />
                        LibriVerse @* Keep text next to logo *@
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Public/Patron Links *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Index">Catalog</a>
                        </li>
                        @* Admin Links (Conditional Rendering) *@
                        @if (User.Identity.IsAuthenticated && await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-cogs me-1"></i> Admin Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminUser" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminLoan" asp-action="Index">Active Loans</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminLoan" asp-action="History">Loan History</a>
                            </li>
                        }
                        @* Patron Only Links *@
                        @if (SignInManager.IsSignedIn(User) && !(await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Loan" asp-action="MyLoans">My Loans</a>
                            </li>
                        }
                    </ul>
                    @* Authentication/Login Links *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        @* Consider adding container class here if needed for body padding *@
        <main role="main" class="">
            @* Added padding-bottom *@
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-white">
            @* Updated Footer *@
            &copy; @DateTime.Now.Year - LibriVerse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>