@model BookLibraryApp.Models.ViewModels.AdminDashboardViewModel 
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container" style="padding-top: 50px;">
    <h1>Welcome, Administrator.</h1>
    <p class="lead">This is your centralized control panel for managing the Online Library. Key metrics and current tasks are laid out below.</p>

    <h2>Library Insights</h2>
    <hr />

    @* 🔑 NEW: INSIGHTS SECTION (Key Metrics) *@
    <div class="row mb-5 text-center">
        
        @* Insight 1: Total Books (Capacity) *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <i class="fas fa-book fa-2x mb-2"></i>
                    <div class="display-4">@Model.TotalBooks</div>
                    <p class="lead">Total Books</p>
                </div>
            </div>
        </div>

        @* Insight 2: Total Active Loans (Activity/Monitoring) *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <i class="fas fa-exchange-alt fa-2x mb-2"></i>
                    <div class="display-4">@Model.TotalActiveLoans</div>
                    <p class="lead">Active Digital Loans</p>
                </div>
            </div>
        </div>

        @* Insight 3: Available Books (Capacity Metric) *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x mb-2"></i>
                    <div class="display-4">@Model.AvailableBooks</div>
                    <p class="lead">Books Available</p>
                </div>
            </div>
        </div>

        @* Insight 4: Expiring Loans (Actionable/Urgent metric) *@
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    <div class="display-4">@Model.ExpiringLoansNext3Days</div>
                    <p class="lead">Expiring (Next 3 Days)</p>
                </div>
            </div>
        </div>
    </div>
    
    @* 🔑 NEW: POPULARITY & PATRON CARDS *@
    <div class="row mb-5 justify-content-center">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-primary h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary"><i class="fas fa-chart-line me-2"></i> Most Popular Title (All Time)</h5>
                    <h3 class="mt-3">"@Model.MostPopularBookTitle"</h3>
                    <p class="card-text text-muted">Total Loans: <span class="fw-bold">@Model.MostPopularBookLoanCount</span></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg border-secondary h-100">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary"><i class="fas fa-users me-2"></i> Registered Patrons</h5>
                    <div class="display-3">@Model.TotalPatrons</div>
                    <p class="card-text text-muted">Active Users in the System</p>
                </div>
            </div>
        </div>
    </div>
    
    <h2 class="mt-5">Management Links</h2>
    <hr />

    @* Management Cards (Original Content) *@
    <div class="row">
        @* Card 1: Manage Book Catalog *@
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-book fa-4x mb-3" style="color: var(--primary-color);"></i>
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text text-muted">Add, edit, and delete titles in the digital catalog.</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-primary mt-2">Go to Books</a>
                </div>
            </div>
        </div>

        @* Card 2: Manage Active Loans/Access *@
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-exchange-alt fa-4x mb-3" style="color: var(--accent-color);"></i>
                    <h5 class="card-title">Manage Digital Loans</h5>
                    <p class="card-text text-muted">Monitor active access and view loan history.</p>
                    <a asp-controller="Loan" asp-action="Index" class="btn btn-secondary mt-2">Go to Loans</a>
                </div>
            </div>
        </div>

       @* Card 3: Manage Users (Formerly Patrons) *@
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-users-cog fa-4x mb-3" style="color: var(--dark-color);"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">View and manage user accounts and roles.</p>
                    <a asp-controller="AdminUser" asp-action="Index" class="btn btn-primary mt-2">Go to Users</a> 
                </div>
            </div>
        </div>

    </div>
</div>