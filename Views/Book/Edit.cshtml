@model BookLibraryApp.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container-md" style="padding: 50px;">
    <h1>Edit Book</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            @* Increased column width for more fields *@
            @* 🔑 FIX 1: Add enctype to allow file uploads *@
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @* IMPORTANT: Hidden field for the BookId *@
                <input type="hidden" asp-for="BookId" />

                @* Title Field *@
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                @* Author Name Field *@
                <div class="form-group mb-3">
                    <label asp-for="AuthorName" class="control-label"></label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                @* 🔑 FIX 2: Add Description Field *@
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    @* 🔑 FIX 3: Add Publication Year Field *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="PublicationYear" class="control-label"></label>
                        <input asp-for="PublicationYear" class="form-control" type="number" />
                        <span asp-validation-for="PublicationYear" class="text-danger"></span>
                    </div>
                    @* 🔑 FIX 4: Add Genre Field *@
                    <div class="col-md-6 mb-3">
                        <label asp-for="Genre" class="control-label"></label>
                        <select asp-for="Genre" class="form-select">
                            @* Using form-select for Bootstrap 5 dropdown styling *@
                            <option value="">-- Select Genre --</option>
                            <option value="Fiction">Fiction</option>
                            <option value="Science Fiction">Science Fiction</option>
                            <option value="Mystery">Mystery</option>
                            <option value="Thriller">Thriller</option>
                            <option value="History">History</option>
                            <option value="Biography">Biography</option>
                            <option value="Science">Science</option>
                            <option value="Technology">Technology</option>
                            @* Add more genres as needed *@
                        </select>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                </div>

                @* 🔑 FIX 5: Add Cover Image File Upload Field & Display Current *@
                <div class="form-group mb-3">
                    <label asp-for="CoverImageFile" class="control-label"></label>
                    <input asp-for="CoverImageFile" type="file" class="form-control" />
                    <span asp-validation-for="CoverImageFile" class="text-danger"></span>
                </div>

                @* Display current image if it exists *@
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <div class="mb-3">
                        <label>Current Cover:</label><br />
                        <img src="@Model.CoverImageUrl" alt="Current Cover" style="max-height: 100px; border-radius: 5px;" />
                        @* Hidden field to retain the existing image path if no new file is uploaded *@
                        <input type="hidden" asp-for="CoverImageUrl" />
                    </div>
                }

                <div class="form-group mt-3">
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}