@model IEnumerable<BookLibraryApp.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Book List";
}

<div class="container" style="padding-top: 50px;">

    <h1 class="text-center">Library Books</h1>

    <form asp-controller="Book" asp-action="Index" method="get" class="mb-4">
        <div class="input-group">

            @* Input field for the search query *@
            <input type="text"
                   name="searchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Search by Title or Author....." />

            @* Search Button *@
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i> Search
            </button>

            @* Clear Filter Button - Navigates back to the Index without a searchString *@
            <a asp-action="Index" class="btn btn-outline-secondary">Clear Filter</a>

            @* Button to navigate to the Create view *@
            <a asp-action="Create" class="btn btn-success">Add New Book</a>
        </div>
    </form>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Check if any results were found *@
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No books found matching the current criteria.</td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorName)
                    </td>
                    <td>
                        @* Action links for the current book *@
                        <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

 </div>