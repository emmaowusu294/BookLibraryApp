@model IEnumerable<BookLibraryApp.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Manage Books";
}

<div class="container" style="padding-top: 50px;">

    <h1 class="text-center">Manage Books</h1>

    <form asp-controller="Book" asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="searchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control"
                   placeholder="Search by Title or Author..." />
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i> Search @* Changed icon class for Font Awesome *@
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear Filter</a>
            <a asp-action="Create" class="btn btn-success">Add New Book</a>
        </div>
    </form>
    <table class="table table-striped table-hover align-middle">
        @* align-middle helps center image vertically *@
        <thead>
            <tr>
                <th>Cover</th> @* 👈 New Column *@
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.AuthorName)</th>
                <th>@Html.DisplayNameFor(model => model.Genre)</th> @* 👈 New Column *@
                <th>@Html.DisplayNameFor(model => model.PublicationYear)</th> @* 👈 New Column *@
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No books found matching the current criteria.</td> @* 👈 Updated colspan *@
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @* 👈 New Cell: Display Cover Image Thumbnail *@
                        @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                        {
                            <img src="@item.CoverImageUrl" alt="Cover for @item.Title" style="max-height: 50px; border-radius: 3px;" />
                        }
                        else
                        {
                            <span class="text-muted small">No Image</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.AuthorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td> @* 👈 New Cell *@
                    <td>@Html.DisplayFor(modelItem => item.PublicationYear)</td> @* 👈 New Cell *@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>